<Window x:Class="WPF_ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="725">
    <Grid>
        <Label Content="Zoo List" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0"/>
        <ListBox x:Name="listZoos" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Height="200" Margin="20,60,0,0" SelectionChanged="listZoos_SelectionChanged"/>
        <Label Content="Associated Animals" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="203,20,0,0"/>
        <ListBox x:Name="listAssociatedAnimals" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Height="200" Margin="203,60,0,0"/>
    </Grid>
</Window>
